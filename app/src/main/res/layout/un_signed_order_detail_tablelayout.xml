<?xml version="1.0" encoding="utf-8"?>
<TableLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:stretchColumns="*"
    android:divider="@drawable/table_v_divider"
    android:showDividers="middle|end|beginning">>
    <TableRow
        android:layout_marginBottom="10dp"
        android:padding="@dimen/tablerow">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/title_order_id"
            android:textSize="@dimen/text_content"
            android:layout_marginRight="10dp"
            android:layout_marginLeft="10dp"
            />
        <TextView
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:id="@+id/orderIdTextView"
            />
    </TableRow>
    <TableRow
        android:layout_marginBottom="10dp"
        android:padding="@dimen/tablerow">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/title_repair_time"
            android:textSize="@dimen/text_content"
            android:layout_marginRight="10dp"
            android:layout_marginLeft="10dp"
            />
        <TextView
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:id="@+id/repairTimeTextView"
            />
    </TableRow>
    <!-- 预计开始时间 -->
    <TableRow
        android:layout_marginBottom="10dp"
        android:padding="@dimen/tablerow">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/title_expected_start_time"
            android:textSize="@dimen/text_content"
            android:layout_marginRight="10dp"
            android:layout_marginLeft="10dp"
            />
        <TextView
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:id="@+id/expectedStartTimeTextView"
            />
    </TableRow>
    <!-- 客户名称 -->
    <TableRow
        android:layout_marginBottom="10dp"
        android:padding="@dimen/tablerow">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/title_client_name"
            android:textSize="@dimen/text_content"
            android:layout_marginRight="10dp"
            android:layout_marginLeft="10dp"
            />
        <TextView
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:id="@+id/clientNameTextView"
            />
    </TableRow>
    <!-- 地址 -->
    <TableRow
        android:layout_marginBottom="10dp"
        android:padding="@dimen/tablerow">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/title_client_address"
            android:textSize="@dimen/text_content"
            android:layout_marginRight="10dp"
            android:layout_marginLeft="10dp"
            />
        <TextView
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:id="@+id/clientAddressTextView"
            />
    </TableRow>
    <!-- 联系人 -->
    <TableRow
        android:layout_marginBottom="10dp"
        android:padding="@dimen/tablerow">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/title_contact_name"
            android:textSize="@dimen/text_content"
            android:layout_marginRight="10dp"
            android:layout_marginLeft="10dp"
            />
        <TextView
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:id="@+id/contactNameTextView"
            />
    </TableRow>
    <!-- 联系电话 -->
    <TableRow
        android:layout_marginBottom="10dp"
        android:padding="@dimen/tablerow">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/title_contact_phone"
            android:textSize="@dimen/text_content"
            android:layout_marginRight="10dp"
            android:layout_marginLeft="10dp"
            />
        <TextView
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:id="@+id/contactPhoneTextView"
            />
    </TableRow>
    <!-- 设备编号 -->
    <TableRow
        android:layout_marginBottom="10dp"
        android:padding="@dimen/tablerow">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="设备编号"
            android:textSize="@dimen/text_content"
            android:layout_marginRight="10dp"
            android:layout_marginLeft="10dp"
            />
        <TextView
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:id="@+id/deviceIdTextView"
            />
    </TableRow>
    <!-- 设备名称 -->
    <TableRow
        android:layout_marginBottom="10dp"
        android:padding="@dimen/tablerow">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="设备名称"
            android:textSize="@dimen/text_content"
            android:layout_marginRight="10dp"
            android:layout_marginLeft="10dp"
            />
        <TextView
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:id="@+id/deviceNameTextView"
            />
    </TableRow>
    <!-- 订单状态 -->
    <TableRow
        android:layout_marginBottom="10dp"
        android:padding="@dimen/tablerow">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/title_order_status"
            android:textSize="@dimen/text_content"
            android:layout_marginRight="10dp"
            android:layout_marginLeft="10dp"
            />
        <TextView
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:id="@+id/orderStatusTextView"
            />
    </TableRow>
    <!-- 故障类型 -->
    <TableRow
        android:layout_marginBottom="10dp"
        android:padding="@dimen/tablerow">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="故障类型"
            android:textSize="@dimen/text_content"
            android:layout_marginRight="10dp"
            android:layout_marginLeft="10dp"
            />
        <TextView
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:id="@+id/faultTypeTextView"
            />
    </TableRow>
    <!-- 故障描述 -->
    <TableRow
        android:layout_marginBottom="10dp"
        android:padding="@dimen/tablerow">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/title_fault_description"
            android:textSize="@dimen/text_content"
            android:layout_marginRight="10dp"
            android:layout_marginLeft="10dp"
            />
        <TextView
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:id="@+id/faultDescriptionTextView"
            />
    </TableRow>
    <!-- 客户备注 -->
    <TableRow
        android:layout_marginBottom="10dp"
        android:padding="@dimen/tablerow">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="客户备注:"
            android:textSize="@dimen/text_content"
            android:layout_marginRight="10dp"
            android:layout_marginLeft="10dp"
            />
        <TextView
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:id="@+id/clientNoteView"
            />
    </TableRow>
    <!-- 图片描述 -->
    <TableRow
        android:layout_marginBottom="10dp"
        android:padding="@dimen/tablerow">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="图片描述:"
            android:textSize="@dimen/text_content"
            android:layout_marginRight="10dp"
            android:layout_marginLeft="10dp"
            />
        <ImageView
            android:id="@+id/imageDescribe"
            android:layout_width="100dp"
            android:layout_height="100dp"/>
    </TableRow>
    <!-- 视频描述 -->
    <TableRow
        android:layout_marginBottom="10dp"
        android:padding="@dimen/tablerow">
        <TextView
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:text="视频描述:"
            android:textSize="@dimen/text_content"
            android:layout_marginRight="10dp"
            android:layout_marginLeft="10dp"/>
        <VideoView
            android:layout_width="300dp"
            android:layout_height="300dp"
            android:id="@+id/videoDescriptionVideo"
            />
    </TableRow>

    <!-- 签收备注 -->
    <TableRow
        android:layout_marginBottom="10dp"
        android:padding="@dimen/tablerow">
        <TextView
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:text="签收备注:"
            android:textSize="@dimen/text_content"
            android:layout_marginRight="10dp"
            android:layout_marginLeft="10dp"/>
        <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/acceptRemarksEditText"
            android:inputType="textMultiLine"/>
    </TableRow>
    <!-- 签收按钮 -->
    <TableRow
        android:layout_marginBottom="10dp"
        android:padding="@dimen/tablerow">
       <Button
           android:layout_width="wrap_content"
           android:layout_height="wrap_content"
           android:id="@+id/signButton"
           android:text="确认签收"/>
        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/unsignedButton"
            android:text="取消签收"/>
    </TableRow>
</TableLayout>