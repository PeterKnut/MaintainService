<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".PersonalInfromationActivity"
    android:background="@color/UIBackground"
    android:orientation="vertical">
    <android.support.v7.widget.Toolbar
        android:id="@+id/my_infromation_toolbar"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:layout_marginBottom="20dp"
        android:background="@color/colorPrimary"
        app:title=" ">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="个人信息"
            android:textColor="@color/white"/>
    </android.support.v7.widget.Toolbar>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="10"
        android:orientation="vertical"
        >
        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/myPhotoButton"
            android:text="头像"
            android:textAlignment="textStart"
            android:layout_gravity="start"
            android:background="@drawable/button_style"
            android:drawablePadding="20dp"
            android:paddingBottom="10dp"
            android:lineSpacingMultiplier="1.2"
            />
        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/myNameButton"
            android:text="姓名"
            android:textAlignment="textStart"
            android:layout_gravity="start"
            android:background="@drawable/button_style"
            />
        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/myIdNumberButton"
            android:text="员工编号"
            android:textAlignment="textStart"
            android:layout_gravity="start"
            android:background="@drawable/button_style"/>
        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/myScoreButton"
            android:text="综合评价"
            android:textAlignment="textStart"
            android:layout_gravity="start"
            android:background="@drawable/button_style"
            />
        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/myPhoneNumberButton"
            android:text="联系电话"
            android:textAlignment="textStart"
            android:layout_gravity="start"
            android:background="@drawable/button_style"/>
        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/myAddressButton"
            android:text="地址"
            android:textAlignment="textStart"
            android:layout_gravity="start"
            android:background="@drawable/button_style"
            />
    </LinearLayout>

</LinearLayout>